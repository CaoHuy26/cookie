<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../layouts/link %>

    <title><%= user.username %></title>
</head>

<% include ../layouts/header %>

<body>

    <div class="container">
        <div class="user-info text-center">
            <img src="../../../../<%= user.avatar %>" alt="" style="width: 120px; height: 120px;">
            <p>Username: <strong><%= user.username %></strong></p>
            <p>Date: <strong><%= user.date %></strong></p>

            <!-- Kiểm tra người dùng đã đăng nhập chưa -->
            <% if (userSession) { %>
                <!-- Kiểm trang người dùng hiện tại với người dùng khác -->
                <% if (userSession._id == user._id) { %>
                    <p><a href="/user/edit">Cập nhật thông tin cá nhân</a></p>
                <% } else { %>
                    <a class="btn btn-info" href="">Kết bạn</a>
                <% } %>
            <% } else { %>
                <p><a href="/login">Đăng nhập để xem nhiều hơn</a></p>
            <% } %>      
        </div>
        
        <div class="row justify-content-center">
            <% Array.from(images).forEach(function(image){ %>
            <div class="col-md-3 m-2" style="width: 255px; height: 255px">
                <div class="card" >
                    <!-- Image Uploaded -->
                    <div class="img-card">
                        <a href="/image/<%= image.id %>">
                            <img src="../../../<%= image.imagePath %>" alt="" style="width: 100%; height: 100%;">
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

    </div>

</body>

</html>