<!DOCTYPE html>
<html lang="en">

<head>
    <% include layouts/link %>
    <link rel="stylesheet" href="css/index.card.css">

    <title>Cookie</title>
</head>

<% include layouts/header %>

<body>
    <div>
        
    </div>
    <div class="container">
        <div style="margin-top: 50px">
            <!-- Item -->
            <div class="row justify-content-center">
                <% Array.from(images).forEach(function(image){ %>
                <div class="col-md-3 m-2">
                    <div class="card">
                        <!-- Image Uploaded -->
                        <div class="img-card">
                            <img src="<%= image.imageContent %>" alt="">
                        </div>
                        <!-- User info -->
                        <div class="card-content">
                            <div class="user-info mb-3">
                                <div class="row">
                                    <!-- Avatar -->
                                    <div class="col-md-3">
                                        <img class="user-avatar" src="img/icon/user.png" alt="">
                                    </div>
                                    <!-- Name & Date -->
                                    <div class="col-md-6 pl-3">
                                        <p class="user-username"><%= image.user %></p>
                                        <span class="user-date-upload"><%= image.dateUpload %></span>
                                    </div>
                                </div>
                            </div>
                            <!-- Status -->
                            <div class="user-status">
                                <p>Đặt tối đa 80 ký tự ...</p>
                                <p>3 dòng ...</p>
                                <p>...</p>
                            </div>
                        </div>
                        <!-- Action -->
                        <div class="card-action">
                            <!-- Like -->
                            <button type="button" class="btn">
                                <img class="m-1" src="img/icon/heart.png" alt="" title="Thích">
                            </button>
                            <!-- Comment -->
                            <button type="button" class="btn">
                                <img class="m-1" src="img/icon/comment.png" alt="" title="Bình luận">
                            </button>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <!-- End Item -->
        </div>


        <!-- Pagination -->
        <div class="d-flex justify-content-center m-3">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% for(let i = 1; i <= Math.ceil(length / perPage); i++) { %>
                <li class="page-item"><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>
                <% } %>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- End Pagination -->

    </div>
</body>

<% include layouts/footer %>

</html>